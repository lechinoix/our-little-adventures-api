{
  "kind": "collectionType",
  "collectionName": "adventures",
  "info": {
    "name": "Adventure",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "cotation": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "participants": {
      "via": "adventures",
      "collection": "participant",
      "dominant": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PLANNED",
        "DONE",
        "ABORTED",
        "TODO"
      ]
    },
    "notation": {
      "type": "integer",
      "max": 5,
      "min": 1
    },
    "places": {
      "via": "adventures",
      "collection": "place"
    },
    "sports": {
      "via": "adventures",
      "collection": "sport",
      "dominant": true
    },
    "date": {
      "type": "date"
    },
    "short_description": {
      "type": "string"
    },
    "elevation": {
      "type": "integer"
    },
    "number_of_days": {
      "type": "integer"
    },
    "orientation": {
      "type": "enumeration",
      "enum": [
        "N",
        "NE",
        "E",
        "SE",
        "S",
        "SW",
        "W",
        "NW"
      ]
    },
    "periods": {
      "via": "adventures",
      "collection": "period",
      "dominant": true
    },
    "topo": {
      "type": "component",
      "repeatable": true,
      "component": "resource.topo"
    }
  }
}
